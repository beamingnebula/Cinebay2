// NumberedTitle.tsx
import React, { useEffect } from 'react';

interface NumberedTitleProps {
  title: string;
}

const NumberedTitle: React.FC<NumberedTitleProps> = ({ title }) => {
  useEffect(() => {
    // Target the span containing the title
    const spanElement = document.querySelector(`.numbered-title span`);
    if (spanElement) {
      // Get the text content of the span
      const text = spanElement.textContent;
      // Clear the span's content
      spanElement.textContent = '';
      // Create the '1' and '0' elements
      const parts = title.split('10');
      spanElement.innerHTML = parts
        .map((part, index) => {
          if (index < parts.length - 1) {
            return `<span>${part}</span><span style="position: relative; left: -0.27em;">1</span><span>0</span>`;
          }
          return `<span>${part}</span>`;
        })
        .join('');
    }
  }, [title]);

  return (
    
      <span>{title}</span>
    
  );
};

export default NumberedTitle;
